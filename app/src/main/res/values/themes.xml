<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ApplicationReservationCentre" parent="Theme.MaterialComponents.DayNight.DarkActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.ApplicationReservationCentre.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.ApplicationReservationCentre.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    //
    <style name="Theme.ApplicationReservationCentre.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="behavior_peekHeight">800dp</item>

    </style>
    <style name="color_theme_login" parent="">
        <item name="colorPrimary">@color/color_login_purple</item>
    </style>
    <style name="button_plat_design" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerRadius">22dp</item>
        <item name="cornerSize">22dp</item>
    </style>
    <style name="CustomTheme" parent="">
        <item name="android:colorPrimary">@color/recycle_color</item>
    </style>

    <style name="corners_img_profil" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
    </style>
    <style name="img_account" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">44dp</item>
    </style>
    <style name="progressbar_">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/rounded_img_account</item>

    </style>
    <style name="account_scroll_color" parent="">

        <item name="colorPrimary">#6a62b7</item>
    </style>
    <style name="img_account_" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">26dp</item>
        <item name="strokeWidth">5dp</item>
        <item name="strokeColor">#DF0000</item>
    </style>
    <style name="calendarecolor" parent="">

        <item name="colorPrimary">#76A9FF</item>
    </style>
</resources>