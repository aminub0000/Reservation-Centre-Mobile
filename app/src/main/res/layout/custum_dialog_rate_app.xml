<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/custum_dialog_corner"
    android:gravity="center"
    android:minWidth="100dp"
    android:orientation="vertical">


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_twenty"
        android:paddingTop="@dimen/margin_twenty"
        android:paddingEnd="@dimen/margin_twenty"
        android:text="Do you like our app ?"
        android:textColor="@color/flatui_alizarin"
        android:textSize="@dimen/normal_size" />

    <TextView
        android:id="@+id/dialog_msg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/margin_twenty"
        android:paddingTop="@dimen/margin_twenty"
        android:paddingEnd="@dimen/margin_twenty"
        android:text="Give us a quick rating so we know if you like it."
        android:textColor="#373737"
        android:textSize="@dimen/small_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="@dimen/margin_twenty"
        android:paddingTop="@dimen/margin_thirty"
        android:paddingEnd="@dimen/margin_fourty"
        android:paddingBottom="@dimen/margin_thirty"
        android:weightSum="5">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star_active" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star_active" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star_active" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star_active" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:src="@drawable/ic_star_active" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal"
        android:paddingEnd="14dp"
        android:paddingBottom="18dp">

        <TextView
            android:id="@+id/cancelBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="1dp"
            android:paddingEnd="15dp"
            android:text="CANCEL"
            android:textColor="#FB6173"
            android:textSize="@dimen/small_text" />

        <TextView
            android:id="@+id/doneBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="15dp"
            android:paddingEnd="1dp"
            android:text="DONE"
            android:textColor="#FB6173"
            android:textSize="@dimen/small_text" />
    </LinearLayout>
</LinearLayout>